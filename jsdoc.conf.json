{
    "opts": {
        "destination": "./docs-out/",
        "encoding": "utf8",
        "package": "package.json",
        "readme": "README.md",
        "template": "./node_modules/ink-docstrap/template",
        "tutorials": "./docs/tutorials"
    },
    "source": {
        "include": [
            "src/ServerEngine.js",
            "src/ClientEngine.js",
            "src/GameEngine.js",
            "src/serialize/DynamicObject.js",
            "src/serialize/Serializer.js",
            "src/render/Renderer.js"
        ]
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "systemName"            : "Incheon",
        "copyright"             : "Incheon Copyright Â© 2016 The contributors to the Incheon project.",
        "includeDate"           : true,
        "navType"               : "vertical",
        "theme"                 : "spacelab",
        "linenums"              : false,
        "collapseSymbols"       : true,
        "inverseNav"            : false,
        "outputSourceFiles"     : false,
        "outputSourcePath"      : false,
        "dateFormat"            : "ddd MMM Do YYYY",
        "syntaxTheme"           : "default",
        "sort"                  : false,
        "search"                : true
    }
}
